  Function {ChooseHotkey( const mrv::Hotkey& h )} {open
  } {
    code {backup = h;
hk = h;} {}
  }
  Function {fill()} {open
  } {
    code {uiCtrl->value( hk.ctrl );
uiMeta->value( hk.meta );
uiAlt->value( hk.alt );
uiShift->value( hk.shift );

char buffer[100];
const char *keyname = buffer;
unsigned k = hk.key;
if (!k) {
      keyname = "0";
   } else if (k <= 7) {
      snprintf(buffer, 100, "(mouse button %d)", k);
   } else if (k < 256 && k != 32) {
      snprintf(buffer, 100, "%c", k);
   } else if (k >= FL_F && k <= FL_F_Last) {
      snprintf(buffer, 100, "F%d", k - FL_F);
   } else {
      snprintf(buffer, 100, "0x%04x", k);
      for (int i = 0; i < 45; ++i)
      {
     if (mrv::table[i].n == k) {
	keyname = mrv::table[i].text;
	break;
     }
    }
   }

if (k == 0 )
   uiKey->value( hk.text.c_str() );
else
   uiKey->value( keyname );} {}
  }
